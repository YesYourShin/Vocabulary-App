<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".RestaurantFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="뭐 먹을지 고민하지 말자"
            android:textSize="30dp" />


        <!--        <LinearLayout-->
        <!--            android:layout_width="385dp"-->
        <!--            android:layout_height="136dp"-->
        <!--            android:layout_gravity="left"-->
        <!--            android:layout_weight="1"-->
        <!--            android:orientation="vertical"-->
        <!--            android:paddingLeft="0dp">-->

        // 버거킹
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/shapeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/burgerking" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 버거킹 " />


                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="후문방향 1km  도보 15분거리  멀긴 하지만 맛있고 각종 할인가능 " />


            </LinearLayout>
        </LinearLayout>


        // 맥도날드
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shapeLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mc" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 맥도날드 " />

                <RatingBar
                    android:id="@+id/ratingBar3"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="정문방향 700m 도보 10분거리 5000원 대에 런치세트 가능" />



            </LinearLayout>
        </LinearLayout>
        // 한솥
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shapeLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hansok" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 한솥 " />

                <RatingBar
                    android:id="@+id/ratingBar4"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="정문방향 400m 3000원 대에    간단히 한끼 해결 가능" />



            </LinearLayout>
        </LinearLayout>
        // 한식
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shapeLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hansik" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 서울식당 " />

                <RatingBar
                    android:id="@+id/ratingBar5"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="후문방향 600m 8분거리 8000원 대에 삽겹살,각종 반찬 무한리필" />


            </LinearLayout>
        </LinearLayout>
        // 국밥
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shapeLayout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gukbab" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 가마솥  국밥 " />

                <RatingBar
                    android:id="@+id/ratingBar6"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="정문방향 400m 5000원대에     든든한 국밥" />

            </LinearLayout>
        </LinearLayout>

        // 학식
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shapeLayout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gs" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 교내      편의점 " />

                <RatingBar
                    android:id="@+id/ratingBar7"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="정문방향 300m 10% 할인된 가격으로 저렴하게  한끼 해결 가능" />


            </LinearLayout>
        </LinearLayout>


        // 짱개
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shapeLayout9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/icon9"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jajanmen" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 짱개 " />

<!--                <Button-->
<!--                    android:id="@+id/button9"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="평점 및 위치" />-->

                <RatingBar
                    android:id="@+id/ratingBar8"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="정문방향 500m 5~6000원대에 한끼 해결 가능" />


            </LinearLayout>
        </LinearLayout>






    </LinearLayout>
</LinearLayout>